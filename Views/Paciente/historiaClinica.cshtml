@{
    Layout = "_Layout";
}

<html>
<head>
    <title> Historia Clinica </title>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Formulario de Historia Clinica</h1>

        <div class="row mb-3">
            <div class="col-md-4">
                <label for="nombre" class="form-label">Nombres</label>
                <input type="text" class="form-control" id="nombreH" placeholder="" readonly>
            </div>
            <div class="col-md-4">
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="apellidoH" placeholder="" readonly>
            </div>
            <div class="col-md-4">
                <label for="dni" class="form-label">DNI</label>
                <input type="text" class="form-control" id="dniH" placeholder="" readonly>
            </div>
        </div>

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"> </h5>
            </div>
            <div class="card-body">
                <textarea class="form-control" id="textoHistoria" rows="8" placeholder="" style="resize: none;"></textarea>
            </div>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-success" onclick="actualizarHistoriaClinicaPaciente()">Guardar</button>
        </div>
    </div>



    <script src="~/js/Pacientes.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            llenarHistoriaClinica();
        });
    </script>
</body>
</html>


