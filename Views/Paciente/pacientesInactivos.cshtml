@{
    Layout = "_Layout";
}


    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"></h1>

        </div>


        <!-- INICIO Formulario para agregar usuarios -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="buscarPacienteI" placeholder="🔍 Buscar por nombre o DNI...">
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table id="tablaPacientesInactivos" class="display table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>DNI</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" class="form-control" name="NombrePI" readonly></td>
                                    <td><input type="text" class="form-control" name="ApellidoPI" readonly></td>
                                    <td><input type="text" class="form-control" name="DNIPI" readonly></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- jQuery y Bootstrap JS (local) -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Pacientes.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
                mostrarPacientesInactivos();
                buscarPorNombreOdniInactivos();
        });
    </script>
