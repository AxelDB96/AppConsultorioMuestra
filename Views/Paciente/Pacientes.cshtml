@{
    Layout = "_Layout";
}


    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"></h1>

        </div>


        <!-- INICIO Formulario para agregar usuarios -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="buscarPaciente" placeholder="🔍 Buscar por nombre o DNI...">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary btn-sm mr-2" data-toggle="modal" data-target="#CrearP">Crear Paciente</button>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table id="tablaPacientes" class="display table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>DNI</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" class="form-control" name="Nombre" readonly></td>
                                    <td><input type="text" class="form-control" name="Apellido" readonly></td>
                                    <td><input type="text" class="form-control" name="DNI" readonly></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Editar Paciente-->
        <div class="modal fade" id="modalEditarPaciente" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <!-- Cambiar a modal-xl para mayor ancho -->
                <div class="modal-content" style="height: 80vh;">
                    <!-- Ajustar la altura -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Editar Paciente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body" style="overflow-y: auto;">
                        <!-- Agregar scroll interno si es necesario -->
                        <form id="formEditarPaciente">
                            <input type="hidden" id="pacienteId">
                            <div class="row">
                                <!-- Usar grid para organizar mejor -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="editNombres" class="form-label">Nombres</label>
                                        <input type="text" class="form-control" id="editNombres">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editApellido" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="editApellido">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editDocumento" class="form-label">Documento</label>
                                        <input type="text" class="form-control" id="editDocumento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editFechaNac" class="form-label">Fecha de nacimiento</label>
                                        <input type="text" class="form-control" id="editFechaNac">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="editUbicacion" class="form-label">Ubicación</label>
                                        <input type="text" class="form-control" id="editUbicacion">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editAdultRespon" class="form-label">Adulto responsable</label>
                                        <input type="text" class="form-control" id="editAdultRespon">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editNombreResponsable" class="form-label">Nombre responsable</label>
                                        <input type="text" class="form-control" id="editNombreResponsable">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editTelefonoResponsable" class="form-label">Teléfono responsable</label>
                                        <input type="text" class="form-control" id="editTelefonoResponsable">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editEmailResponsable" class="form-label">Correo electrónico responsable</label>
                                        <input type="text" class="form-control" id="editEmailResponsable">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <div class="d-flex justify-content-between mb-3">
                                <button type="button" class="btn btn-primary" onclick="historiaClinicaPaciente(document.getElementById('pacienteId').value)" id="historiaClinica">Historia Clinica</button>
                                <button type="button" class="btn btn-primary" onclick="seguimientoEvaluacionPaciente(document.getElementById('pacienteId').value)" id="seguimientoEvaluacion">Seguimiento Evaluacion</button>
                                <button type="button" class="btn btn-primary" onclick="seguimientoTratamientoPaciente(document.getElementById('pacienteId').value)" id="seguimientoTratamiento">Seguimiento Tratamiento</button>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <button type="button" class="btn btn-danger" onclick="BotondesactivarPaciente()" id="desactivarPaciente">desabilitar</button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="actualizarPaciente()" id="guardarCambios">Guardar</button>
                    </div>
                </div>
            </div>
        </div>




        <div class="modal fade" id="CrearP" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Ingrese los datos del nuevo Paciente</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formCrearPaciente" action="" method="POST">
                            <div class="form-group">
                                <label for="inputNombre">Nombres</label>
                                <input type="text" class="form-control" id="inputNombresNP" name="nombreNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputApellido">Apellido</label>
                                <input type="text" class="form-control" id="inputApellidoNP" name="apellidoNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputDNI">DNI</label>
                                <input type="text" class="form-control" id="inputDNINP" name="dniNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputFechaNacimiento">Fecha de nacimiento</label>
                                <input type="text" class="form-control" id="inputFechaNacimientoNP" name="fechaNacimientoNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputFechaAdmision">Fecha de Admision</label>
                                <input type="text" class="form-control" id="inputFechaAdmisionNP" name="fechaAdmisionNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputUbicacion">Ubicacion</label>
                                <input type="text" class="form-control" id="inputUbicacionNP" name="ubicaionNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputAdultoResponsable">Adulto Responsable</label>
                                <input type="text" class="form-control" id="inputAdultoResponsableNP" name="adultoResposableNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputNombresdelResponsable">Nombres del Responsable</label>
                                <input type="text" class="form-control" id="inputNombresdelResponsableNP" name="nombresResposableNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputTelefono">Telefono</label>
                                <input type="text" class="form-control" id="inputTelefonodelResponsableNP" name="telefonoNP" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="text" class="form-control" id="inputEmaildelResponsableNP" name="emailNP" placeholder="" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="crearNuevoPaciente" onclick="CrearPacientes()">Crear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


<div id="toast" class="toast">mensaje</div>

    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">

    <!-- jQuery y Bootstrap JS (local) -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Pacientes.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            mostrarPacientes();
            buscarPorNombreOdni();
        });
    </script>

