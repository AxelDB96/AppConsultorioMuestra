@{
    Layout = "_Layout";
}


<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/sb-admin-2.min.css" rel="stylesheet">
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"></h1>

        </div>


        <!-- INICIO Formulario para agregar colegas -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="buscarColega" placeholder="🔍 Buscar por nombre o profesion...">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary btn-sm mr-2" data-toggle="modal" data-target="#CrearC">Agendar Contacto</button>
                    </div>
                </div>
                <!-- formulario -->
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table id="tablaColegas" class="display table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Profesion</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" class="form-control" name="Nombre" readonly></td>
                                    <td><input type="text" class="form-control" name="Apellido" readonly></td>
                                    <td><input type="text" class="form-control" name="Profesion" readonly></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Editar Paciente-->
        <div class="modal fade" id="modalEditarColega" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <!-- Cambiar a modal-xl para mayor ancho -->
                <div class="modal-content" style="height: 80vh;">
                    <!-- Ajustar la altura -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Ver Colegas</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body" style="overflow-y: auto;">
                        <!-- Agregar scroll interno si es necesario -->
                        <form id="formEditarColega">
                            <input type="hidden" id="colegaId">
                            <div class="row">
                                <!-- Usar grid para organizar mejor -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="editNombresC" class="form-label">Nombres</label>
                                        <input type="text" class="form-control" id="editNombresC">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editApellidoC" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="editApellidoC">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editProfesionC" class="form-label">Profesion</label>
                                        <input type="text" class="form-control" id="editProfesionC">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="editTelefonoC" class="form-label">Telefono</label>
                                        <input type="text" class="form-control" id="editTelefonoC">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editEmailC" class="form-label">Correo electrónico</label>
                                        <input type="text" class="form-control" id="editEmailC">
                                    </div>
                                    <div class="mb-3">
                                        <label for="editUbicacionC" class="form-label">Ubicación</label>
                                        <input type="text" class="form-control" id="editUbicacionC">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <div class="d-flex justify-content-center mt-3">
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#logoutElim">Eliminar </button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="actualizarColega()" id="guardarCambios">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>




        <div class="modal fade" id="CrearC" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Ingrese los datos del contacto</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formCrearContacto" action="" method="POST">
                            <div class="form-group">
                                <label for="inputNombre">Nombres</label>
                                <input type="text" class="form-control" id="inputNombresNC" name="nombreNC" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputApellido">Apellido</label>
                                <input type="text" class="form-control" id="inputApellidoNC" name="apellidoNC" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputDNI">Profesion</label>
                                <input type="text" class="form-control" id="inputProfesionNC" name="profesionNC" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputUbicacion">Ubicacion</label>
                                <input type="text" class="form-control" id="inputUbicacionNC" name="ubicaionNC" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputTelefono">Telefono</label>
                                <input type="text" class="form-control" id="inputTelefonoNC" name="telefonoNC" placeholder="" required>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="text" class="form-control" id="inputEmailNC" name="emailNC" placeholder="" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="crearNuevoContacto" onclick="CrearColega()">Agendar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de eliminar -->
    <div class="modal fade" id="logoutElim" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">¿Desea eliminar el contacto?</h5>
                    <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" id="eliminarContacto" class="btn btn-primary" onclick="eliminarColega()">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="toast" class="toast">mensaje</div>

    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">

    <!-- jQuery y Bootstrap JS (local) -->
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Colegas.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
             mostrarColegas();
             buscarPorNombreOProfesion();
        });
    </script>
